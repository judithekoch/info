package coins;

import java.util.ArrayList;
import java.util.List;

public class Coins {

	List<Double> list = new ArrayList<Double>();
	
	Coins(){
		
		list.add(0.01);
		list.add(0.02);
		list.add(0.05);
		list.add(0.10);
		list.add(0.20);
		list.add(0.50);
		list.add(1.00);
		list.add(2.00);
		
	}
	
	public int numberOfPossibilities(double n){
		int result = 0;
		
		for (int i = 7; i >= 0; i--){
			if (n%list.get(i)==0){
				result++;
			} else {
				double rest = n-n/i;
				for(int j = i-1; j>=0; j--){
					if (rest%list.get(j)==0){
						result++;
					} else {
						rest = rest - rest/j;
						for(int k = j-1; k>=0; k--){
							if (rest%list.get(k)==0){
								result++;
							} else {
								rest = rest - rest/k; 
								for(int l = k-1; l>=0; l--){
									if (rest%list.get(l)==0){
										result++;
									} else {
										rest = rest - rest/k;
										for(int m = l-1; m>=0; m--){
											if (rest%list.get(m)==0){
												result++;
											} else {
												rest = rest - rest/m;
												for(int q = m-1; q>=0; q--){
													if (rest%list.get(q)==0){
														result++;
													} else {
														rest = rest - rest/q;
														for(int o = m-1; o>=0; o--){
															if (rest%list.get(o)==0){
																result++;
															} else {
																rest = rest - rest/o;
																for(int p = o-1; p>=0; p--){
																	if (rest%list.get(p)==0){
																		result++;
																	}
																}
															}
														}
													}
												}
											}
										}
									}
								}
							}
						}
					}
				}
				
			}
		}
		
		return result;
	}
	
}
